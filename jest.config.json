{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "modules/**/*.service.(t|j)s",
    "modules/**/*.resolver.(t|j)s",
    "modules/**/*.entity.(t|j)s",
    "modules/**/*.dto.(t|j)s"
  ],
  "coverageDirectory": "/shared/tests/coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@modules/(.*)": "<rootDir>/modules/$1",
    "^@shared/(.*)": "<rootDir>/shared/$1",
    "^@src/(.*)": "<rootDir>/$1"
  }
}
